{
  "name": "muri-dev",
  "private": true,
  "version": "0.1.0",
  "description": "Development workspace for muri",
  "scripts": {
    "build": "napi build --platform --release --cargo-cwd crates/muri-napi --js native.js --dts native.d.ts npm/muri",
    "build:debug": "napi build --platform --manifest-path crates/muri-napi/Cargo.toml --js npm/muri/native.js --dts npm/muri/native.d.ts",
    "prepublishOnly": "napi prepublish -t npm/muri",
    "test": "node tests/node-api.test.js",
    "universal": "napi universal -t npm/muri"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0"
  },
  "napi": {
    "name": "muri",
    "triples": {
      "defaults": true,
      "additional": [
        "aarch64-apple-darwin",
        "aarch64-unknown-linux-gnu",
        "aarch64-unknown-linux-musl",
        "x86_64-unknown-linux-musl"
      ]
    }
  }
}
